// schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  name      String
  email     String     @unique
  password  String
  active    Boolean    @default(true)
  movements Movement[]
}

model Product {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @unique
  value       Float
  minimum_value Int
  image       Bytes?
  movements   Movement[]
}

model Movement {
  id          Int         @id @default(autoincrement())
  productId   Int
  userId      Int
  type        MovementType
  quantity    Int
  balance     Int
  date        DateTime
  product     Product     @relation(fields: [productId], references: [id], onDelete: Cascade)
  user        User        @relation(fields: [userId], references: [id])
}

enum MovementType {
  entrada
  saida
}
